        <Label x:Name="slackLabel" Content="Slack timer" HorizontalAlignment="Left" Height="30" Margin="26,33,0,0" VerticalAlignment="Top" Width="131" Grid.ColumnSpan="2"/>
        <Label x:Name="slackTimer" Content="timer" HorizontalAlignment="Left" Height="30" Margin="26,84,0,0" VerticalAlignment="Top" Width="131" Grid.ColumnSpan="2"/>
        <Label x:Name="productiveLabel" Content="Schoolstuff timer" HorizontalAlignment="Left" Height="29" Margin="26,17,0,0" VerticalAlignment="Top" Width="131" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Label x:Name="productiveTimer" Content="timer" HorizontalAlignment="Left" Height="28" Margin="26,75,0,0" VerticalAlignment="Top" Width="131" Grid.Row="1" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
